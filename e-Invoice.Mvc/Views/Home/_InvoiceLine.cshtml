@model IEnumerable<eInvoicePdf.InvoiceLineViewModel>

@{
    ViewBag.Title = "_InvoiceLine";
}

<h2>Invoice Line</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
