<script type="text/javascript">
    $("#approve-btn").click(function ()  {
        ////menei datepicker kai lista proiontwn
        //event.preventDefault();

        var invoiceLines = [];
        $('#itemsTable tbody tr').each(function () {
            var invoiceLine = {
                UUID: $(this).find(".UUID").val(),
